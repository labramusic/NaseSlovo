
@{
    ViewBag.Title = "Membership";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h1>Načini pretplate:</h1>
        <select name="Pretplata">
            <option value="month">
                Mjesečno
            </option>
            <option value="year">
                Godišnje
